<?xml version="1.0" encoding="utf-8"?>

<Defs>
	
	<Vehicles.VehicleTurretDef ParentName="VehicleTurretBase">
		<defName>CGF1_MWP_Vehicle_TurretGun_120mm_L11A2_ChieftainMk2</defName>
		<label>120mm L11A2</label>
		<description>A 120mm tank gun originally mounted on the British FV4201 Chieftain Mk2 MBT.</description>
		<turretType>Rotatable</turretType>
		<shotSound>CGF1_GG_SFXR_120mm_Cannon</shotSound>
		<reloadSound>Artillery_ShellLoaded</reloadSound>
		<gizmoIconTexPath>CGF1/Vehicle/FV4201Chieftain/120mm_L11A2_ChieftainMk2_Icon</gizmoIconTexPath>
		
		<projectile>CGF1_MWP_Shell_120x570mm_NATO</projectile>
		<reloadTimer>5</reloadTimer>
		<reloadTimerMultiplierPerCrewCount>
			<points>
				<li>(1, 1)</li>
				<li>(2, 0.9)</li>
			</points>
		</reloadTimerMultiplierPerCrewCount>
		<warmUpTimer>3.4</warmUpTimer>
		
		<magazineCapacity>1</magazineCapacity>
		<chargePerAmmoCount>5</chargePerAmmoCount>
		<genericAmmo>true</genericAmmo>
		
		<autoSnapTargeting>false</autoSnapTargeting>
		<rotationSpeed>1.35</rotationSpeed>
		
		<projectileOffset>3</projectileOffset>
		
		<minRange>4.9</minRange>
		<maxRange>64.9</maxRange>
		
		<recoil>
			<distanceTotal>0.3</distanceTotal>
			<distancePerTick>0.05</distancePerTick>
			<speedMultiplierPostRecoil>0.35</speedMultiplierPostRecoil>
		</recoil>
		<fireModes>
			<li>
				<shotsPerBurst>1</shotsPerBurst>
				<ticksBetweenBursts>1</ticksBetweenBursts>
				<spreadRadius>4</spreadRadius>
				<label>Single</label>
				<texPath>UI/Gizmos/FireRate_Single</texPath>
			</li>
		</fireModes>

		<graphicData>
			<texPath>CGF1/Vehicle/FV4201Chieftain/120mm_L11A2_ChieftainMk2</texPath>
			<graphicClass>Vehicles.Graphic_Turret</graphicClass>
			<shaderType>CutoutComplexPattern</shaderType>
			<drawSize>(8.65, 8.65)</drawSize>
		</graphicData>
		
		<ammunition>
			<thingDefs>
				<li>Steel</li>
			</thingDefs>
		</ammunition>
		
		<motes>
			<li>
				<cycles>1</cycles>
				<moteDef>Mote_CannonPlume</moteDef>
				<offset>(0, 0, 2.5)</offset>
				<animationType>Reset</animationType>
			</li>
		</motes>
	</Vehicles.VehicleTurretDef>
</Defs>