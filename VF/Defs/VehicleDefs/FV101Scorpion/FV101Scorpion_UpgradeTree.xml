<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<Vehicles.UpgradeTreeDef>
		<defName>CGF1_MWP_Vehicle_FV101Scorpion_UpgradeTree</defName>
		 
		<nodes>
		
			<!-- Main Guns -->
			
			<li>
				<key>MainTurret_Removed</key>
				<label>Remove main turret</label>
				<description>Remove the main turret and its armament from the vehicle. Reduces mass.</description>
				
				<icon>CGF1/Vehicle/FV101Scorpion/FV101Scorpion_east</icon>
				
				<work>2500</work>
				
				<disableIfUpgradeNodesEnabled>
					<li>MainTurret_90mmCockerillMk3MA1</li>
					<li>Pintle_L7A1</li>
					<li>Pintle_M2HB</li>
				</disableIfUpgradeNodesEnabled>
				
				<gridCoordinate>(27, 1)</gridCoordinate>
				<drawSize>(50, 50)</drawSize>
				
				<!--<prerequisiteNodes>
					<li>MainTurret_Removed</li>
				</prerequisiteNodes>-->
				
				<upgrades>
					<li Class = "Vehicles.TurretUpgrade">
						<removeTurrets>
							<li>mainTurret</li>
							<li>coaxialMG</li>
						</removeTurrets>
					</li>
					<li MayRequire="OskarPotocki.VanillaVehiclesExpanded" Class="Vehicles.CompUpgrade">
						<deactivate>
							<li Class="VanillaVehiclesExpanded.CompProperties_ReloadableWithVerbs" />
						</deactivate>
					</li>
					<li Class = "Vehicles.StatUpgrade">
						<vehicleStats>
							<li>
								<def>Mass</def>
								<value>-75</value>
							</li>
						</vehicleStats>
					</li>
				</upgrades>
				
				<graphicOverlays>
					<li>
						<graphicData>
							<texPath>CGF1/Vehicle/FV101Scorpion/FV101ScorpionPlatform</texPath>
							<graphicClass>Vehicles.Graphic_Vehicle</graphicClass>
							<drawSize>(2.5,5.0)</drawSize>
							<layer>2</layer>
							<shaderType>CutoutComplexPattern</shaderType>
						</graphicData>
					</li>
				</graphicOverlays>
			</li>
			<li>
				<key>MainTurret_90mmCockerillMk3MA1</key>
				<label>90mm Cockerill Mk3 M-A1</label>
				<description>Replace the main gun with a low-velocity, 90mm Cockerill Mk3 MA-1 infantry support cannon (with coaxial L43A1 Ranging Gun.) Increases range and area of effect at the cost of weight and reload speed.</description>
				
				<icon>CGF1/Vehicle/FV101Scorpion/90mm_CockerillMk3MA1_Icon</icon>
				
				<work>15000</work>
				
				<disableIfUpgradeNodesEnabled>
					<li>MainTurret_Removed</li>
					<li>Pintle_L7A1</li> <!-- Disabled one-way due to a VF bug -->
					<li>Pintle_M2HB</li>
				</disableIfUpgradeNodesEnabled>
				
				<gridCoordinate>(27, 4)</gridCoordinate>
				<drawSize>(50, 50)</drawSize>
				
				<upgrades>
					<li Class="Vehicles.TurretUpgrade">
						<turrets>
							<li>
								<turretDef>CGF1_MWP_Vehicle_TurretGun_90mm_CockerillMk3MA1_</turretDef>
								
								<renderProperties>
									<north>(0, -0.3)</north>
									<south>(0, 1.1)</south>
									<east>(-1.05, 0.58)</east>
								</renderProperties>
								<drawLayer>2</drawLayer>

								<gizmoLabel>90mm Mk3 M-A1</gizmoLabel>
								
								<angleRestricted/>
								<aimPieOffset>(0, 2.4)</aimPieOffset>
								
								<key>mainTurret</key>
							</li>
							<li>
								<turretDef>CGF1_MWP_Vehicle_TurretGun_L43A1_RangingGun_Coaxial_</turretDef>
								
								<renderProperties>
									<north>(-0.21,0.85)</north>
								</renderProperties>
								<drawLayer>3</drawLayer>
								
								<gizmoLabel>L43A1 Ranging Gun</gizmoLabel>
								
								<angleRestricted>(345, 15)</angleRestricted>
								<aimPieOffset>(0, 0.05</aimPieOffset>
								
								<key>coaxialMG</key>
								<parentKey>mainTurret</parentKey>
							</li>
						</turrets>
						<removeTurrets>
							<li>mainTurret</li>
							<li>coaxialMG</li>
						</removeTurrets>
					</li>
					<li Class = "Vehicles.StatUpgrade">
						<vehicleStats>
							<li>
								<def>Mass</def>
								<value>80</value>
							</li>
						</vehicleStats>
					</li>
				</upgrades>
				
				<ingredients>
					<Steel>100</Steel>
					<ComponentIndustrial>2</ComponentIndustrial>
				</ingredients>
			</li>
			
			<!-- Roof Guns -->
			
			<li>
				<key>Pintle_L7A1</key>
				<label>Pintle: L7A1</label>
				<description>Install an L7A1 GPMG on the roof of the vehicle. Requires steel to refurbish.</description>
				
				<icon>CGF1/Vehicle/Turret/Coax/L7A1</icon>
				
				<work>7000</work>
				
				<disableIfUpgradeNodesEnabled>
					<li>MainTurret_Removed</li>
					<li>Pintle_M2HB</li>
				</disableIfUpgradeNodesEnabled>
				
				<gridCoordinate>(30, 1)</gridCoordinate>
				<drawSize>(50, 50)</drawSize>
				
				<upgrades>
					<li Class="Vehicles.TurretUpgrade">
						<turrets>
							<li>
								<turretDef>CGF1_MWP_Vehicle_TurretGun_L7A1_Small_</turretDef>
								
								<renderProperties>
									<north>(-0.4, 0.0)</north>
								</renderProperties>
								<drawLayer>3</drawLayer>

								<gizmoLabel>L7A1</gizmoLabel>
								
								<angleRestricted/>
								<aimPieOffset>(0, -0.25)</aimPieOffset>
								<!--<defaultAngleRotated>270</defaultAngleRotated>-->
								
								<key>commanderTurret</key>
								<parentKey>mainTurret</parentKey>
							</li>
						</turrets>
					</li>
				</upgrades>

				<ingredients>
					<Steel>85</Steel>
					<ComponentIndustrial>2</ComponentIndustrial>
				</ingredients>
			</li>
			<li>
				<key>Pintle_M2HB</key>
				<label>Pintle: M2HB</label>
				<description>Install an M2HB HMG on the roof of the vehicle. Requires steel to refurbish.</description>
				
				<icon>CGF1/Vehicle/Turret/Coax/Browning_M2HB</icon>
				
				<work>8000</work>
				
				<disableIfUpgradeNodesEnabled>
					<li>MainTurret_Removed</li>
					<li>Pintle_L7A1</li>
				</disableIfUpgradeNodesEnabled>
				
				<gridCoordinate>(30, 4)</gridCoordinate>
				<drawSize>(50, 50)</drawSize>
				
				<upgrades>
					<li Class="Vehicles.TurretUpgrade">
						<turrets>
							<li>
								<turretDef>CGF1_MWP_Vehicle_TurretGun_M2HB_Small_</turretDef>
								
								<renderProperties>
									<north>(-0.4, 0.0)</north>
								</renderProperties>
								<drawLayer>3</drawLayer>

								<gizmoLabel>M2HB</gizmoLabel>
								
								<angleRestricted/>
								<aimPieOffset>(0, -0.25)</aimPieOffset>
								
								<key>commanderTurret</key>
								<parentKey>mainTurret</parentKey>
							</li>
						</turrets>
					</li>
				</upgrades>

				<ingredients>
					<Steel>100</Steel>
					<ComponentIndustrial>3</ComponentIndustrial>
				</ingredients>
			</li>	
		</nodes>
	</Vehicles.UpgradeTreeDef>
</Defs>
